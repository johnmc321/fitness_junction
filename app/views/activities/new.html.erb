<% provide(:title, 'Activity') %>

<div class="center hero-unit">
<h1>New Activity</h1>

<div class="row">
  <div class="span4 offset4">
    <%= form_for @activity, :html => { :multipart => true} do |f| %>
    
<%= render 'shared/error_messages', object: f.object %>
      <%= f.label :type %>
      <%= f.text_field :activity_type %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :location %>
      <%= f.text_field :location %>
      <%= f.label :date %>
      <%= f.text_field :date %>
      <%= f.label :duration %>
      <%= f.text_field :duration %>
      <%= f.label :distance %>
      <%= f.text_field :distance %>
      
      <br/>
      

      <%= f.submit "Add", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>


</div>


</div>
