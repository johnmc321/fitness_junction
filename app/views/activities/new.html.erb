<% provide(:title, 'Activity') %>
<div class="center hero-unit">
<h1>Upload a new Activity</h1>
<p class="center">
  Select a file from your computer or from a connected device.
</p>
<div class="row">
  <div class="span4 offset2">
    <%= form_for @activity, :html => { :multipart => true} do |f| %>
    

      <%= f.label :type %>
      <%= f.text_field :type %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :location %>
      <%= f.text_field :name %>
      <%= f.label :date %>
      <%= f.text_field :name %>
      <%= f.label :duration %>
      <%= f.text_field :name %>
      <%= f.label :distance %>
      <%= f.text_field :name %>
      
      <br/>
      

      <%= f.submit "Upload", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
</div>
