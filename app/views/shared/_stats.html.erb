<!-- a partial to display the number of users being followed by the current user
as well as the number of users following the current user -->

<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>"> <!-- renders the show_follow page with details of users being followed -->
    <strong id="following" class="stat">
      <%= @user.followed_users.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>"> <!-- renders the show_follow page with details of user's followers -->
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>