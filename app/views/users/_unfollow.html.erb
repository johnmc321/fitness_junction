<!-- shows the unfollow button and destroys the relationship between current user and user being viewed -->
<!-- this partial is rendered on the user/show page via the _follow_form partial -->


<%= form_for(current_user.relationships.find_by_followed_id(@user),
             html: { method: :delete },
             remote: true) do |f| %>
  <%= f.submit "Unfollow", class: "btn btn-large" %>
<% end %>