<% provide(:title, @title) %>
<div class="row">
  <aside class="span3">
    <section>
      <% if @user.photo.file? %>
        <%= image_tag @user.photo %>
      <% else %>
        <p><%= @user.name %>
      <% end %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "return to my profile", @user %></span>
      <span><b>Activities:</b> <%= @user.activities.count %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <%= render 'shared/stats' %>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>